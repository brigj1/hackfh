// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Partner {
  id            Int             @id @default(autoincrement())
  companyName   String
  email         String          @unique
  phoneNumber   String
  contactName   String
  address       String?
  city          String?
  state         String?
  zip           String?
  country       String?
  Item          Item[]
  DonationEvent DonationEvent[]
}

model Item {
  id              Int            @id @default(autoincrement())
  name            String
  description     String?
  images          String?
  msrp            Float?
  upc             String?
  url             String?
  partner         Partner        @relation(fields: [partnerId], references: [id])
  partnerId       Int
  DonationEvent   DonationEvent? @relation(fields: [donationEventId], references: [id])
  donationEventId Int?
  DonationItem    DonationItem[]
}

model DonationEvent {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  deliveryDate DateTime
  status       String
  notes        String?
  partner      Partner        @relation(fields: [partnerId], references: [id])
  partnerId    Int
  items        Item[]
  DonationItem DonationItem[]
}

model DonationItem {
  id               Int           @id @default(autoincrement())
  createdAt        DateTime      @default(now())
  additionalImages String?
  quantity         Int
  retailPrice      Float?
  donationEvent    DonationEvent @relation(fields: [donationEventId], references: [id])
  donationEventId  Int
  item             Item          @relation(fields: [itemId], references: [id])
  itemId           Int
}
